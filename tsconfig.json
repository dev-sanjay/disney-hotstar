{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@context/*": ["context/*"],
      "@components/*": ["components/*"],
      "@themes/*": ["designs/themes/*"],
      "@atoms/icon": ["designs/atoms/icon/index"],
      "@atoms/button/*": ["designs/atoms/button/*"],
      "@typography": ["designs/typography/index"],
      "@typography/*": ["designs/typography/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.png", "**/*.mp4"],
  "exclude": ["node_modules"]
}
